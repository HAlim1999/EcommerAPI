<div class="col-md-4 mx-auto mt-4">
  <div class="card text-center">
    <div class="card-header">
      <h3>Edit Product</h3>
    </div>
    <div class="card-body">
        <form action="/products/edit/{{product.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
            <div class="form-goup">
                <input type="text" name="name" class="form-control" placeholder="name" value="{{product.name}}"> 
            </div>
            <div class="form-goup">
                <input type="text" name="imgURL" class="form-control" placeholder="imgURL" value="{{product.imgURL}}">
            </div>
                        <div class="form-goup">
                <input type="number" name="price" class="form-control" placeholder="price" value="{{product.price}}">
            </div>
                        <div class="form-goup">
                <input type="number" name="countInStock" class="form-control" placeholder="countInStock" value="{{product.countInStock}}">
            </div>
                        <div class="form-goup">
                <input type="text" name="category" class="form-control" placeholder="category" value="{{product.category}}">
            </div>
            <div class="form-group mt-3">
              <button type="submit" class="btn btn-primary btn-block">Save</button>

            </div>

        </form>
    </div>

  </div>
</div>