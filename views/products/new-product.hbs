<div class="col-md-4 mx-auto mt-4">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Product</h3>
    </div>
    <div class="card-body">
      <form action="/products/new-product" method="POST">
        <div class="form-goup">
          <input
            type="text"
            name="name"
            class="form-control" 
            placeholder="Name"
            autofocus
          />
        </div>
        <div class="form-group mt-3">
          <input
            type="text"
            name="imgURL"
            class="form-control"
            placeholder="imgURL"
          />
        </div>

        <div class="form-group mt-3">
          <input
            type="number"
            name="price"
            class="form-control"
            placeholder="price"
          />
        </div>

        <div class="form-group mt-3">
          <input
            type="number"
            name="countInStock"
            class="form-control"
            placeholder="countInStock"
          />
        </div>

        <div class="form-group mt-3">
          <input
            type="text"
            name="category"
            class="form-control"
            placeholder="category"
          />
        </div>

        <div class="form-group mt-3">
          <button class="btn btn-primary btn-block">Save</button>

        </div>

      </form>
    </div>

  </div>
</div> 